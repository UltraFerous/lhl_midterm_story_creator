<!DOCTYPE html>
<html lang="en">

<head>
  <title>Story Creator</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_nav') %>
  <main>
    <div class="story-overview">
    <h1 class="story-title"> <%= storyData.title %> </h1>
    <h1 class="story-author"> By <%= storyData.name %> </h1>
    <h1 class="story-body"> <%= storyData.body %> </h1>
    <h1 class="story-status"> <%= storyData.status %> </h1>
  </div>
  <div class="new-contribution">
    Add a contribution contribution
    <form action="/api/contributions/<%= storyData.id %>" method="post">
      <input type="text" id="newContribution" name="newContribution" placeholder="Your addition..."><br>
      <input type="submit" value="Submit">
  </div>
  <div class="contributions">
    Contributions
  <% for (let i = 0; i < contData.length; i++) { %>
    <!-- Only display a contribution if it hasn't been accepted by story creator -->
    <% if (!contData[i].accepted) { %>
      <div class="contribution">
        <h1 class="contribution-body"> <%= contData[i].body %> </h1>
        <h1 class="contribution-author"> By <%= contData[i].name %> </h1>
        <!-- Display Accept button if current user is story creator -->
        <% if (userData.id === storyData.user_id) { %>
          <a href="#" class="accept-clicker" data-story-id="<%= storyData.id %>" data-contribution-body="<%= contData[i].body %>" data-contribution-id="<%= contData[i].id %>"><h1 class="contribution-accept"> Accept </h1></a>
        <% } %>
        <h1 class="contribution-accepted"> <%= contData[i].accepted %> </h1>
        <!-- Only display Like button if user is logged in -->
        <% if (userData.id) { %>
          <% let test = false; %>
          <% for (let k = 0; k < voteData.length; k++) { %>
            <% if (voteData[k].contribution_id === contData[i].id) { %>
              <% test = true; %>
            <% }  %>
            <% } %>
            <% if (test === true) { %>
              <a href="" class="contribution-clicker" data-contribution-id="<%= contData[i].id %>" data-voter-id="<%= userData.id %>"><h1 class="contribution-like">
                Liked
                <% test = false; %>
              </h1></a>
              <% } else { %>
              <a href="" class="contribution-clicker" data-contribution-id="<%= contData[i].id %>" data-voter-id="<%= userData.id %>"><h1 class="contribution-like">
                Like
              </h1></a>
              <% } %>
        <% } %>
        <h1 class="contribution-votes"> Likes: <%= contData[i].vote_count %> </h1>
      </div>
    <% } %>
  <% }; %>
  </div>
  </main>
</body>
</html>
